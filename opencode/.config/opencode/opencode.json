{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "localprovider": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Local Model (MyServer)",
      "options": {
        "baseURL": "http://Mac:8080/v1",
        "apiKey": "{env:MY_LOCAL_API_KEY}",
        "timeout": false,
        "headers": {
          "Authorization": "Bearer {env:MY_LOCAL_API_KEY}"
        }
      },
      "models": {
        "my-model-id": {
           "name": "Glm-4.5-Air",
           "options": {
               "reasoningEffort": "minimal",
               "textVerbosity": "low",
               "timeout": false
           }
        }
        // potentially more models
      }
    }
  }
}

